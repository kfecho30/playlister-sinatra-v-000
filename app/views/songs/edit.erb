<h1>Edit A Song</h1>
<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="Name">Name</label><input type="text" id="Name" name="song_name" value ="<%=@song.name%>">
  <br>
  <label for="Artist Name">Artist Name:</label
  <input type="text" name="artist_name" id="Artist Name" value="<%=@song.artist.name%>">
  <br>
  <p>Select Genre(s):</p>
  <br>
  <%@genres.each do |genre| %>
  <input type="checkbox" name="genres[]" value="<%=genre.name%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <%end%>
  <input type="submit" id="Save" value="Save">
</form>
